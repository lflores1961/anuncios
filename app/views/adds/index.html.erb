<p style="color: green"><%= notice %></p>

<h1>Adds</h1>

<div>
  <%= link_to "Create Add", new_add_path, class: "btn btn-primary" %>
</div>
<hr>
<h3>Listing</h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</td>
        <th>Published on</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @adds.each do |add| %>
        <%= content_tag :tr, id: dom_id(add), class:  dom_class(add) do %>
          <td><%= add.title %></td>
          <td><%= add.created_at.to_fs(:long) %></td>
          <td><%= add.description %></td>
          <td><%= link_to "Show", add %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%== pagy_bootstrap_nav(@pagy) %>

