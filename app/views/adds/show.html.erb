<h1>Detalle del Anuncio</h1>
<p style="color: green"><%= notice %></p>

<%= render @add %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= link_to "Editar Anuncio", edit_add_path(@add), class: "btn btn-primary" %>
    </div>
    <div class="col-md-4">
      <%= link_to "Regresar al listado", adds_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-4">
      <%= link_to "Eliminar Anuncio", @add, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "¿Está seguro que quiere eliminar el Anuncio?" } %>

    </div>
  </div>
</div>
